<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="-120dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="הרשמה "
            android:textColor="#8D6E63"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="right"
            android:hint="שם מלא"
            android:textColorHint="@color/black"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#121111" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="right"
            android:hint="אימייל"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#070707"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/email_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="סיסמאת אימייל"
            android:textColorHint="@color/black"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginTop="16dp"
            android:gravity="right" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="מספר טלפון"
            android:textColorHint="@color/black"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginTop="16dp"
            android:gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="right"
            android:text="מספר כלי רכבים"
            android:textColor="#8D6E63"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/license_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:inputType="text"
            android:padding="12dp"
            android:text="123-45-678"
            android:textColor="#D1C8C8"
            android:textColorHint="#9D9898" />

        <LinearLayout
            android:id="@+id/vehicle_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#8D6E63"
            android:text="המשך"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
