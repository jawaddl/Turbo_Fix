<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <TextView
            android:text="בחר את סוג הפעולה:"
            android:textSize="26sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/scheduleAppointmentBtn"
            android:text="קביעת תור רגיל"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#8D6E63"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/urgentCallBtn"
            android:text="           תור דחוף (התקשר)"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#D0021B"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:drawableEnd="@drawable/ic_call"
            android:layoutDirection="rtl"
            android:drawablePadding="8dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

    <!-- כפתור חזרה בצד שמאל למטה -->
    <Button
        android:id="@+id/backToClientBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_margin="24dp"
        android:backgroundTint="#8D6E63"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:stateListAnimator="@null"
        android:text="חזרה"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</FrameLayout>
