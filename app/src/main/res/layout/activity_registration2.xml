<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- כותרת -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="פרטי רכב"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <!-- שדה קילומטראז' -->
        <EditText
            android:id="@+id/kilometerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/kilometer_hint"
            android:inputType="number" />

        <!-- ספינר רמת טיפול ברכב -->
        <Spinner
            android:id="@+id/treatmentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- שדה עבר תאונות -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accident_hint" />

        <Spinner
            android:id="@+id/accidentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/accident_options" />

        <!-- שדה תיאור תאונה (מוסתר בהתחלה) -->
        <EditText
            android:id="@+id/accidentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/accident_description_hint"
            android:visibility="gone" />

        <!-- כפתור העלאת תמונה -->
        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_image_button" />

        <!-- תצוגת תמונה שהמשתמש מעלה -->
        <ImageView
            android:id="@+id/vehicleImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- כפתור שמירת הנתונים -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_button" />
    </LinearLayout>
</ScrollView>
